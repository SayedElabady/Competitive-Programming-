#include <bits/stdc++.h> 
#define MOD 1000000007
#define pb push_back
#define MAX 1e7+5
#define PI 3.141592653589793238462643383279502884197169399
#define forn(i,s,n) for(int i=s;i<n;i++)
#define fornr(i,s,n) for(int i=n ; i>s;i--)
typedef  long long ll;
using namespace std;






//cpntrr asdasdsdddddddddddddddddddddddddddddddddddd




int main(){
     int n , x ,k, pos=0 , neg=0;
     scanf("%d %d"  , &n , &k);
     forn(i , 0 , n)
     {
          scanf("%d" , &x);
          if(x>0 )pos+=x;
          else if(x<0 )neg+=x;
     }
     if(!pos && !neg || !abs(pos+neg)){puts("0"); return 0;}
     if(abs(pos+neg)<k){
          printf("%d" , 1);
     }else {
          if(abs(pos+neg)%k)printf("%d" , abs(pos+neg)/k+1);
          else printf("%d" , abs(pos+neg)/k);
     }
}
